<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:meekux="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/shape_light_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_titl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:text="编辑"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="#f9f9f9" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="设备名称"
        android:textColor="#666666"
        android:textSize="@dimen/text_size_16sp" />

    <EditText
        android:id="@+id/common_dialog_text_content"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_layout_edittext_rename"
        android:hint="@string/tips_input_listname"
        android:maxLength="16"
        android:maxLines="1"
        android:paddingLeft="@dimen/view_size_12dp"
        android:paddingRight="@dimen/view_size_12dp"
        android:textColor="#333333"
        android:textColorHint="#333333"
        android:textSize="@dimen/text_size_14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:text="选择长度"
        android:textColor="#666666" />

    <meekux.grandar.com.meekuxpjxroject.utils.RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/rb_1"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_1"
                style="@style/radio_button_stly"
                android:text="1M" />

            <RadioButton
                android:id="@+id/rb_2"
                style="@style/radio_button_stly"
                android:text="2M" />

            <RadioButton
                android:id="@+id/rb_3"

                style="@style/radio_button_stly"
                android:text="3M" />

            <RadioButton
                android:id="@+id/rb_4"
                style="@style/radio_button_stly"
                android:text="4M" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_5"

                style="@style/radio_button_stly"
                android:text="5M" />

            <RadioButton
                android:id="@+id/rb_6"

                style="@style/radio_button_stly"
                android:text="6M" />

            <RadioButton
                android:id="@+id/rb_7"
                style="@style/radio_button_stly"
                android:text="7M" />

            <RadioButton
                android:id="@+id/rb_8"
                style="@style/radio_button_stly"
                android:text="8M" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_9"
                style="@style/radio_button_stly"
                android:text="9M" />

            <RadioButton
                android:id="@+id/rb_10"
                style="@style/radio_button_stly"
                android:text="10M" />

            <RadioButton
                android:id="@+id/rb_11"
                style="@style/radio_button_stly"
                android:text="11M" />

            <RadioButton
                android:id="@+id/rb_12"
                style="@style/radio_button_stly"
                android:text="12M" />
        </LinearLayout>
    </meekux.grandar.com.meekuxpjxroject.utils.RadioGroup>

    <LinearLayout
        android:id="@+id/linratlayoutmydialog"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <com.rey.material.widget.TextView
            android:id="@+id/common_dialog_text_cancel"
            style="@style/Material.Drawable.Ripple.Wave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/shape_cancel"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17sp"
            meekux:rd_cornerRadius="5dp" />

        <com.rey.material.widget.TextView
            android:id="@+id/common_dialog_text_confirm"
            style="@style/Material.Drawable.Ripple.Wave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:background="@drawable/shape_cancel"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17sp"
            meekux:rd_cornerRadius="5dp" />
    </LinearLayout>
</LinearLayout>