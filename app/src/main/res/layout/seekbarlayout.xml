<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/alertbg"
    android:orientation="horizontal">
<LinearLayout
    android:layout_marginLeft="5dp"
    android:layout_marginTop="13dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:lineSpacingMultiplier="1.5"
        android:textColor="#fff"
        android:text="设置亮度"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/progressstext"
        android:layout_marginLeft="4dp"
        android:text="5"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="4dp"
        android:text="%"
        android:textColor="#fff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/lightprogressbar" />

        <SeekBar
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/secckBarlight"
            style="@style/Widget.SeekBar.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="9"
            android:max="98"
            android:progressDrawable="@drawable/seekbar_horizontal"
            android:thumb="@mipmap/slidding"/>
    </LinearLayout>
</RelativeLayout>