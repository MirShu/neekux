<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:id="@+id/main_activity_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/smallroomtrue"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lefttextviewbackground"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/smallroompresstextview">

            <TextView
                android:id="@+id/homegradviewtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:ems="2"
                android:text="@string/wallet"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/openlightlinearlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/openlight"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/smallroomopen" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="开灯" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/closelightlinearlayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="2"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/closelightimage"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/smallroomoff" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="关灯" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>