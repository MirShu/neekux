<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:igoo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <meekux.grandar.com.meekuxpjxroject.view.TopView
        android:id="@+id/right_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        igoo:title="@string/mydevice" />


    <android.support.design.widget.TabLayout
        android:id="@+id/adddevice_view_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        igoo:tabIndicatorColor="@color/greencolor"
        igoo:tabSelectedTextColor="@color/greencolor"
        android:background="@color/white"
        igoo:tabTextColor="@color/whiteTitleColor" />

    <android.support.v4.view.ViewPager
        android:id="@+id/adddevice_view_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     />

</LinearLayout>