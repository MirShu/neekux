<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:igoo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/adddevice_view_tabLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@mipmap/secondtitlebg"
            igoo:tabIndicatorColor="#276c7f"
            igoo:tabSelectedTextColor="#276c7f"
            igoo:tabTextColor="@color/black" />

        <android.support.v4.view.ViewPager
            android:id="@+id/adddevice_view_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />
    </LinearLayout>
</RelativeLayout>