<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ly_pop"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:paddingRight="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_add_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/add_device"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp"
            android:drawableLeft="@mipmap/icon_add_device"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:drawablePadding="14dp"
            android:background="@color/greencolor"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/whiteLineColor"/>
        <TextView
            android:id="@+id/tv_serach_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp"
            android:text="@string/search_device"
            android:drawableLeft="@mipmap/icon_serach"
            android:paddingLeft="10dp"
            android:drawablePadding="10dp"
            android:background="@color/greencolor"/>


    </LinearLayout>

</LinearLayout>