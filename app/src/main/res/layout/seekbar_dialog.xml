<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/alert"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/view_size_24dp"
        android:layout_marginTop="@dimen/view_size_24dp">

        <ImageView
            android:id="@+id/seekdialog_small_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="12dp" />

        <ImageView
            android:id="@+id/seekdialog_large_icon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="12dp" />

        <com.grandar.igoo.igooproject.view.GrandarSeekBar
            android:id="@+id/seekdialog_seekbar"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="16dp"
            android:max="99"
            android:progressDrawable="@drawable/iphone_seekbar_style"
            android:thumb="@drawable/iphone_seekbar_thumb" />
    </FrameLayout>

    <TextView
        android:id="@+id/seekdialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/view_size_6dp"
        android:layout_marginLeft="@dimen/view_size_12dp"
        android:layout_marginTop="@dimen/view_size_6dp"
        android:shadowColor="@color/black"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="14sp" />

</RelativeLayout>